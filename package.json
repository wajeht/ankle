{
	"name": "ankle",
	"version": "1.0.0",
	"description": "",
	"main": "/dist/src/server.js",
	"scripts": {
		"build": "tsc && npm run minify",
		"dev": "tsx watch --clear-screen=false ./src/server.ts",
		"start": "npm run build && NODE_ENV=production && npm run db:migrate:prod && npm run db:generate && node ./dist/src/server.js",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"test": "vitest --run",
		"test:watch": "vitest",
		"lint:check": "eslint .",
		"lint": "eslint --fix .",
		"minify": "if [ \"$NODE_ENV\" != \"development\" ]; then html-minifier --input-dir ./src/views --output-dir ./src/views --collapse-whitespace --minify-js --minify-css --remove-comments --file-ext html; else echo 'Cannot minify in development environment'; fi",
		"db:push": "npx prisma db push",
		"db:generate": "npx prisma generate",
		"db:migrate:dev": "npx prisma migrate dev",
		"db:migrate:prod": "npx prisma migrate deploy",
		"db:reset": "npx prisma migrate reset --force",
		"db:seed": "tsx ./src/db/seed.ts"
	},
	"prisma": {
		"schema": "./src/db/schema.prisma",
		"seed": "tsx ./src/db/seed.ts"
	},
	"keywords": [
		"ankle",
		"old school",
		"90s",
		"website"
	],
	"author": "wajeht",
	"license": "MIT",
	"dependencies": {
		"@prisma/client": "^5.11.0",
		"compression": "^1.7.4",
		"connect-flash": "^0.1.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.9",
		"express": "^4.18.3",
		"express-ejs-layouts": "^2.5.1",
		"express-rate-limit": "^7.2.0",
		"express-session": "^1.18.0",
		"helmet": "^7.1.0",
		"html-minifier": "^4.0.0",
		"marked": "^12.0.1",
		"prisma": "^5.11.0",
		"socket.io": "^4.7.5",
		"typescript": "^5.4.2"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/connect-flash": "^0.0.40",
		"@types/cors": "^2.8.17",
		"@types/ejs": "^3.1.5",
		"@types/express": "^4.17.21",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/express-session": "^1.18.0",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"prettier": "^3.2.5",
		"supertest": "^6.3.4",
		"tsx": "^4.7.1",
		"vitest": "^1.4.0"
	}
}
