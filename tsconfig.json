{
	"compilerOptions": {
		"target": "ESNext",
		"rootDir": "./",
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"removeComments": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"allowJs": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"typeRoots": ["./node_modules/@types/node", "node"]
	},
	"include": ["./src/**/*.ts", ".env"],
	"exclude": [
		"node_modules",
		"public/js/*",
		"**/*.factory.ts",
		"**/*.seeder.ts",
		"src/database/__generated__",
		"dist/**/*",
		"node_modules",
		"logs",
		"src/**/*.spec.ts",
		"src/**/*.socket.ts",
		"src/**/*.test.ts",
		".adminjs",
		".vscode",
		"mongo-data",
		"public"
	]
}
